{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "esModuleInterop": true,
    "charset": "utf8",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": "./src/",
    "paths": {
      "#/*": ["*"],
      "#packages/*": ["../packages/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
